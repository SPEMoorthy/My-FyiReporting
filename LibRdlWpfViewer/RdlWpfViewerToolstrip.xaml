<UserControl x:Class="LibRdlWpfViewer.RdlWpfViewerToolstrip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:myctrl="clr-namespace:fyiReporting.RdlViewer;assembly=RdlViewer">
    <Grid Width="auto" Height="auto">
        <WindowsFormsHost Margin="0" Name="windowsFormsHostViewerToolstrip" >
            <WindowsFormsHost.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
            </WindowsFormsHost.Background>
            <myctrl:ViewerToolstrip x:Name="viewerToolstrip" Dock="Fill" BackColor="ActiveCaption" Margin="0,0,0,0" />
        </WindowsFormsHost>
    </Grid>
</UserControl>
